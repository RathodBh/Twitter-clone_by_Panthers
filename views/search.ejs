

 <!-- right panel  -->
  <div class="col-3 right">
    <div class="inner-right h-100 " >
        <div class="search-box position-relative">
            <input type="search" class="rounded-pill w-100" placeholder="Search Twitter">
            <i class="fa-solid fa-magnifying-glass search-icon"></i>
        </div>
        <div class="mt-3 follow-right bg-gray p-2 border-radius-12 flw">
            <h5 class="mt-2 mb-3">Who to follow</h5>
            <% fuser.forEach(sql=>{%>
            <div class="my-4 d-flex justify-content-between align-items-center w-100">
                <div class="d-flex">
                    <img src="<%=sql.user_image%>" alt="" class="profile-size me-2 border">
                    <div class="info">
                        <h6><%=sql.name%></h6>
                        <span class="text-gray">@<%=sql.user_name%></span>
                        <div class="mt-1">
                            <% if(followers.includes(sql.id)){%>

                                <div id="<%=sql.id%>" onclick="follow('<%=sql.id%>',1)" class="followButton btn btn-light rounded-pill px-3" >unFollow</div>
                            <%}else{%>

                                <div id="<%=sql.id%>" onclick="follow('<%=sql.id%>',0)" class="followButton btn btn-dark rounded-pill px-3" >Follow</div>
                                <%}%>
                        </div>
                    </div>
                   
                </div>
               
            </div>
           <%});%>
            

            
            
           

           
        </div>

        <div class="footer p-2 mt-2">
            <ul class="d-flex flex-wrap list-unstyled footer-link-container mb-0">
                <li>
                    <a href="">Terms and Service</a>
                </li>
                <li>
                    <a href="">Privacy Policy</a>
                </li>
                <li>
                    <a href="">Cookie Policy</a>
                </li>
                <li>
                    <a href="">Accessibility</a>
                </li>
                <li>
                    <a href="">Ads info</a>
                </li>
                <li>
                    <a href="">More ...</a>
                </li>
            </ul>
            <div class="px-2 py-0">
                <a href="">@<span id="footer-year"></span> Twitter_clone, Inc.</a>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
crossorigin="anonymous"></script>
<script>



async function follow(follower_id,flag){

console.log(flag);

if(flag==0){

     await fetch(`/addfollow?followerId=${follower_id}&flag=${flag}`);
    document.getElementById(`${follower_id}`).innerHTML = "unFollow"; 
    document.getElementById(`${follower_id}`).setAttribute("onclick",`follow(${follower_id},1)`);
    document.getElementById(`${follower_id}`).style.background="white";
    document.getElementById(`${follower_id}`).style.color="black";
       
}else{
     await fetch(`/addfollow?followerId=${follower_id}&flag=${flag}`);
    document.getElementById(`${follower_id}`).innerHTML = "Follow";   
    document.getElementById(`${follower_id}`).setAttribute("onclick",`follow(${follower_id},0)`);  
    document.getElementById(`${follower_id}`).style.background="black";
    document.getElementById(`${follower_id}`).style.color="white";
}

}



//for print latest year
document.querySelector("#footer-year").innerText = new Date().getFullYear();


</script>
</body>

</html>
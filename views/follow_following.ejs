<%- include("menu") -%>

    <div class="col-6 p-2">
        <ul class="nav nav-tabs">
            <li class="nav-item w-50 text-center all-center">
                <a class="nav-link w-100 fw-600 active" data-bs-toggle="tab" href="#Tweets">
                    <span>
                        followers
                    </span>

                </a>
            </li>
            <li class="nav-item w-50 text-center all-center">
                <a class="nav-link w-100 fw-600 " data-bs-toggle="tab" href="#Retweets">
                    <span>
                        Following
                    </span>
                </a>
            </li>
        </ul>

      
            <div class="tab-content">
                <div class="mt-3 follow-right bg-gray p-2 border-radius-12 tab-pane active" id="Tweets">
                    <h5 class="mt-2 mb-3">followers</h5>
                    <% following.forEach(sql=>{%>
                        <div class="my-4 d-flex justify-content-between align-items-center w-100">
                            <div class="d-flex">
                                <img src="<%=sql.user_image%>" alt="" class="profile-size me-2 border">
                                <div class="info">
                                    <h6>
                                        <%=sql.name%>
                                    </h6>
                                    <span class="text-gray">@<%=sql.user_name%></span>
                                    <div class="mt-1">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%});%>
                </div>

     

                <div class="mt-3 follow-right bg-gray p-2 border-radius-12 h-75 tab-pane " id="Retweets">
                    <h5 class="mt-2 mb-3">Following</h5>
                    <% follower.forEach(sql=>{%>
                        <div class="my-4 d-flex justify-content-between align-items-center w-100">
                            <div class="d-flex">
                                <img src="<%=sql.user_image%>" alt="" class="profile-size me-2 border">
                                <div class="info">
                                    <h6>
                                        <%=sql.name%>
                                    </h6>
                                    <span class="text-gray">@<%=sql.user_name%></span>
                                    <div class="mt-1">

                                    </div>
                                </div>

                            </div>

                        </div>
                        <%});%>
                </div>
            </div>
    </div>

    <%- include("search") -%>
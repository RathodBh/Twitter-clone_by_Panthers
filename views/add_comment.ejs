<div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content ps-3 pb-2">
            <form action="" method="post" id="addCommentForm">
                <div class="d-flex p-2">
                    <button type="button" class="btn-close"  data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body" id="modal_body">
                    <div id="errLimitComment" class="my-1"></div>
                    
                    <div class="d-flex pt-2">
                        <img src="/assets/images/cover.jpg" alt="" class="profile-size me-2 border ">
                        <input type="hidden" name="tweetId" id="tweetId">
                        <textarea placeholder="Add your comment..." name="comment_text"
                            class="text-dark tweet-comment-box" id="comment_area" cols="30" rows="5"

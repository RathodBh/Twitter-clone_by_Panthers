<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

    <link rel="stylesheet" href="/stylesheets/signup.css">
    <link rel="stylesheet" href="/stylesheets/style.css">

    <title>Twitter | Login</title>

</head>

<body>
    <div class="loader">
        <img src="/assets/images/twitter-rise.gif" style="border-radius: 50%;" alt="Loading" />
    </div>

    <!-- Modal  -->
    <div class="modal fade" id="signup">
        <div class="modal-dialog">
            <div class="modal-content rounded mt-6rem">

                <div class="modal-header bg-blue top-radius  d-flex flex-column jcc">
                    <i class="fa-brands fa-twitter twitter-logo"></i>
                    <h3 class="modal-title text-light">Sign-In your account</h3>
                </div>

                <div class="modal-body bg-light container">
                    <div class="row">
                        <div class="col-lg-6 col-12">
                            <form action="" class="w-100" method="POST">
                                <div class="data">
                                    <div class="">
                                        <div id="part1">
                                            <div class="d-flex jcc alc p-10 flex-column">
                                                <h4 class="text-blue w-100 mb-2">Login</h4>

                                                <div class="mb-3 w100">
                                                    <label for="email" class="form-label text-dark">Username or email
                                                        address</label>
                                                    <input type="text" class="form-control rounded" id="email"
                                                        oninput="checkValidation()"
                                                        placeholder="name@example.com" name="email">
                                                    <span class="w-100 text-danger fs-14" id="emailError"></span>
                                                </div>

                                                <div class="mb-3 w100 position-relative">
                                                    <label for="password" class="form-label text-dark">Password</label>
                                                    <div class="position-relative">
                                                        <input type="password" class="form-control rounded"
                                                            id="password" placeholder="Enter password" name="password"  oninput="checkValidation()">
                                                        <i class="far fa-eye text-secondary" id="togglePassword"></i>
                                                    </div>
                                                </div>
                                                <a href="/forget">Forget password?</a>
                                            </div>
                                            <input type="submit" value="SUBMIT" 
                                                class="w100 bg-blue text-light border-0 py-2 rounded login-now" id="login-now" disabled="true">
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>
                        <div class="col-lg-6 col-12">
                            <div class="swiper mySwiper w-100 h-100">
                                <div class="swiper-wrapper w-100">
                                    <div class="swiper-slide">
                                        <img src="https://images.indianexpress.com/2022/11/Twitter-Pixabay.jpg?w=640" />
                                    </div>
                                    <div class="swiper-slide">
                                        <img
                                            src="https://www.jornalcontabil.com.br/wp-content/uploads/schema-and-structured-data-for-wp/twitter-1200x675.jpg" />
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="https://swiperjs.com/demos/images/nature-3.jpg" />
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>

                <div class="modal-footer bottom-radius py-4">
                    <p class="text-center w-100 fw-300 ">Don't have an account? <a href="/user/sign-up"
                            class="text-white fw-600">Register
                            here</a></p>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <!-- sweet alert  -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.all.min.js"></script>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.min.css'>
    <!-- Initialize Swiper -->

    <!-- <script src="/javascripts/signup.js"></script> -->
    <script>
        window.addEventListener("load", function () {
            const loader = document.querySelector(".loader");
            loader.className += " hidden"; // class "loader hidden"
        });

        let err = `<%= error1 %>`;

        if (err == "true") {

            const Toast2 = Swal.mixin({
                toast: true,
                position: 'top',
                showConfirmButton: false,
                timer: 5000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            })

            Toast2.fire({
                icon: 'error',
                title: 'Invalid credentials'
            })
            document.querySelector('#password').value = ""
            document.querySelector('#email').value = ""
        }
        // for stopping the hide modal
        var myModal = new bootstrap.Modal(document.getElementById('signup'), {
            keyboard: false,
            backdrop: false
        })

        //auto show the modal
        myModal.show();

        //toggle password
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');

        togglePassword.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);

            // toggle the eye slash icon
            if (this.classList.contains('fa-eye-slash')) {
                this.classList.remove('fa-eye-slash');
                this.classList.add('fa-eye');
            } else {
                this.classList.remove('fa-eye');
                this.classList.add('fa-eye-slash');
            }
        });

        //swipper
        var swiper = new Swiper(".mySwiper", {
            effect: "fade",
            grabCursor: true,
            cubeEffect: {
                shadow: true,
                slideShadows: true,
                shadowOffset: 20,
                shadowScale: 0.94,
            },
            loop: true,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
        });
        // async function checkemailforlogin(e) {
        //     let email = e.value

        //     const save_req = await fetch(`/user-login/checkemail`, {
        //         method: "POST",
        //         headers: {
        //             'Content-Type': 'application/json'
        //         },
        //         body: JSON.stringify({
        //             data: e.value

        //         })
        //     });
        // }

    //disable submit button
    let checkValidation = () =>{
        if(document.querySelector("#email").value=="" || document.querySelector("#password").value == "" || document.querySelector("#email").value.length < 5 || document.querySelector("#password").value.length <8 ){
            document.querySelector(".login-now").setAttribute("disabled","true");
        }else{
            document.querySelector(".login-now").removeAttribute("disabled");
        }
    }
    checkValidation()  

    </script>
</body>

</html>
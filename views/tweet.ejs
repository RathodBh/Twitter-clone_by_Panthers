<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />

    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/test.css">
    <script type="text/javascript" src="/javascripts/tweetit.js"></script>  
    <title>Document</title>
</head>

<body>
    <%- include("menu") -%>
        <!-- for tweet -->
        <div class="col-4 p-2">

            <div class="inner-main">
                <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
                    Open modal
                </button> -->


                <!-- The Modal -->
                <div class="modal " id="myModal">
                    <div class="modal-dialog" id="modal_dialog">
                        <div class="modal-content ps-3 pb-2  " id="modal-content_id">

                            <!-- Modal Header -->
                            <div class="d-flex p-2">
                                <button type="button" class="btn-close " data-bs-dismiss="modal"></button>
                            </div>

                            <!-- Modal body -->
                                <div class="modal-body" id="modal_body">
                                    <div class="d-flex pt-2">
                                        <img src="/assets/images/cover.jpg" alt="" class="profile-size me-2 border ">
                                    <textarea placeholder="What's happening?" name="tweet-text"
                                        class="text-dark tweet-comment-box" id="twt-area" cols="30" rows="5"
                                        maxlength="300"></textarea>
                                </div>
                            </div>
                            <div class="d-flex" id="twt_btn_lnk">
                                <div>   
                                    <a href="#gallery">
                                        <input type="file" name="uploaded_file" id="" class="">
                                        <img src="/assets/images/gallery.png" alt="" height="80%" width="80%"
                                            class="profile-size me-1 border border-3 border-primary  link-icon link-hover">
                                    </a>
                                    <a href="#emojis">
                                        <img src="/assets/images/emojis.png" alt="" height="80%" width="80%"
                                            class="profile-size me-1 border border-3 border-primary  link-icon  link-hover">
                                    </a>
                                </div>
                                <div>
                                    <button type="button" class="btn btn-primary bg-blue  rounded-pill me-3"
                                        data-bs-dismiss="modal" onclick="twt_clk()">Tweet</button>
                                </div>

                            </div>


                            <!-- Modal footer -->
                            <!-- <div class="modal-footer"> -->
                            <!-- </div> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include("search") -%>
</body>

</html>
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/signup.css">

    <title>Twitter | Activation</title>
<style>
    .link-tb{
        color: white;
        font-size: medium;
        font-weight: 900;
        padding: 15px;
    }
</style>
</head>

<body>

    <!-- Modal  -->
    <div class="modal" id="signup">
        <div class="modal-dialog container">
            <div class="modal-content rounded">

                <div class="modal-header bg-blue top-radius  d-flex flex-column jcc">
                        <i class="fa-brands fa-twitter twitter-logo"></i>
                        <h3 class="modal-title text-light">Activate your account</h3>
                </div>

                <div class="modal-body bg-light">
                    <div class="row">
                        <div class="col-6">
                            <div class="swiper mySwiper w-100 h-100">
                                <div class="swiper-wrapper w-100">
                                    <div class="swiper-slide">
                                        <img src="https://images.indianexpress.com/2022/11/Twitter-Pixabay.jpg?w=640" />
                                    </div>
                                    <div class="swiper-slide">
                                        <img
                                            src="https://www.jornalcontabil.com.br/wp-content/uploads/schema-and-structured-data-for-wp/twitter-1200x675.jpg" />
                                    </div>
                                    <div class="swiper-slide">
                                        <img src="https://swiperjs.com/demos/images/nature-3.jpg" />
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <form action="/user/sign-up" class="w-100" method="post">
                                <div class="data">
                                    <div class="candidate">
                                        <div class="heading">
                                            <% if(activated==true) {%>
                                                <h1>Your account activated successfully.</h1>
                                                <h5>Login here <a href="/user-login">Login</a> </h5>
                                            <%}else{%>
                                                <h1>Thank you for registration.</h1>
                                                <div class="activate-content">
                                                    <div class="subtitle">
                                                        <h4>
                                                            please click below link for activate your account!
                                                        </h4>
                                                    </div>
                                                    <div class="activation-link">
                                                        <p>
                                                           <button style=" background-color: #1d9bf0;" class="btn btn-primary pt-4"><a class="link-tb" href="/user/actiivateUser/?id=<%=userID%>">
                                                            Click Here
                                                        </a></button> 
                                                        </p>
                                                    </div>
                                                </div>
                                            <%}%>
                                        </div>

                                    </div>
                                  
                                </div>
                            </form>
                        </div>
                    </div>


                </div>

                <div class="modal-footer bottom-radius py-4">
                    <p class="text-center w-100">Already have an account? <a href="/user-login" class="text-light fw-600">Login now</a></p>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
 
    <script src="/javascripts/signup.js"></script>
    <script>
        
        //for stopping the hide modal
        var myModal = new bootstrap.Modal(document.getElementById('signup'), {
            keyboard: false,
            backdrop: false
        })
        
        //auto show the modal
        myModal.show();

    </script>
</body>

</html>
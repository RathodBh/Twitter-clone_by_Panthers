        <script>
            // let output = document.getElementById('myTextArea');


            let textArea = document.getElementById("myTextArea");
            textArea.focus()

            textArea.addEventListener("input", (e) => {

                // console.log(textArea.value[textArea.value.length - 2]);
                let hashTag = textArea.innerHTML.match(/#[a-z0-9_]+/g)

                for (let curHashtag of hashTag) {
                    textArea.innerHTML = textArea.innerHTML.replace(curHashtag, `<span class="text-primary">${curHashtag}</span>`)

                    // textArea.blur();
                    // textArea.click();
                }
            })
            document.querySelector('#sub_btn').addEventListener('click', async function (e) {
                e.preventDefault();
                if (document.querySelector("#myTextArea").innerText == "") {
                    ToastBlank.fire({
                        icon: 'warning',
                        title: 'Please enter a Tweet',
                    })
                } else {
                    let tweet = document.querySelector("#myTextArea").innerText;
                    let hashTags = tweet.match(/#[a-z0-9_]+/g)
                    // document.querySelector("#hash").value = hashTags
                    let tweetReq = await fetch(`/dashboard/tweet`, {
                        method: "POST",
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            tweet,
                            hashTags
                        })
                    })

                    let ansReq = await tweetReq.json();
                    if (ansReq.ans == true) {
                        forYouDataLoad()
                    }
                    // document.querySelector("#tweetSubmit").submit()
                }
            })
        </script>

